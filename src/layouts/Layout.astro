---
// Properties & Data
const { title = "" } = Astro.props;
const websiteTitle = "The Bible";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - {websiteTitle}</title>
  </head>
  <body>
    <header>
      <h1>The Bible</h1>
    </header>
    <main id="main-content">
      <div class="inner">
        <slot />
      </div>
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} The Bible</p>
    </footer>
  </body>
</html>
